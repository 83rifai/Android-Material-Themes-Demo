<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardStyle.Home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_material_theme_in_code">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/material_theme_buttons_raised"
            android:textAppearance="@style/TextStyle.Title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_medium"
            android:text="@string/material_theme_default"
            android:textAppearance="@style/TextStyle.Body2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_small"
            android:text="@string/material_theme_current_theme"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_small"
            android:text="@string/material_theme_green_theme"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_small"
            android:text="@string/material_theme_blue_theme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_medium"
            android:text="@string/material_theme_colored"
            android:textAppearance="@style/TextStyle.Body2"/>

        <Button
            style="@style/ButtonStyle.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_small"
            android:text="@string/material_theme_current_theme"/>

        <Button
            style="@style/ButtonStyle.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_small"
            android:text="@string/material_theme_green_theme"/>

        <Button
            style="@style/ButtonStyle.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_small"
            android:text="@string/material_theme_blue_theme"/>
    </LinearLayout>
</android.support.v7.widget.CardView>