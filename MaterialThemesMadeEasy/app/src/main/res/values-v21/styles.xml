<resources>>
    <!-- Base Theme -->
    <style name="AppTheme" parent="BaseTheme">
        <!-- API specific attributes 21+ -->
        <item name="selectableRectDrawable">@drawable/ripple_selectable_rect</item>
        <item name="selectableRectDrawableColored">@drawable/ripple_selectable_rect_colored</item>
        <item name="selectableRoundedRectDrawable">@drawable/ripple_selectable_rounded_rect</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/ripple_selectable_rounded_rect_colored</item>
    </style>

    <style name="AppTheme.Orange" parent="BaseTheme.Orange">
        <!-- API specific attributes 21+ -->
        <item name="selectableDrawableColor">@color/selector_orange_pressed</item>
    </style>

    <style name="AppTheme.Green" parent="BaseTheme.Green">
        <!-- API specific attributes 21+ -->
        <item name="selectableDrawableColor">@color/selector_green_pressed</item>
    </style>

    <style name="AppTheme.Blue" parent="BaseTheme.Blue">
        <!-- API specific attributes 21+ -->
        <item name="selectableDrawableColor">@color/selector_blue_pressed</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonStyle.NoRaise">
        <!-- API specific attributes 21+ -->
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonStyle.Colored.NoRaise">
        <!-- API specific attributes 21+ -->
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>
