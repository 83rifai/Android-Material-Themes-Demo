    <!-- App Bar Overlay Themes -->
    <style name="AppBarOverlayTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <!-- Popup Overlay Themes -->
    <style name="PopupOverlayTheme" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- Dialog Themes -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
    </style>

    <style name="DialogTheme.Red">
        <item name="colorPrimary">@color/material_red_500</item>
        <item name="colorPrimaryDark">@color/material_red_700</item>
        <item name="colorAccent">?colorPrimary</item>
    </style>

    <style name="DialogTheme.Orange">
        <item name="colorPrimary">@color/material_orange_500</item>
        <item name="colorPrimaryDark">@color/material_orange_700</item>
        <item name="colorAccent">?colorPrimary</item>
    </style>

    <style name="DialogTheme.Yellow">
        <item name="colorPrimary">@color/material_yellow_500</item>
