<resources>

    <!-- Base Theme -->
    <style name="BaseTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App specific attributes all APIs -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlHighlight">@color/selector_black_pressed</item>
        <item name="dialogTheme">@style/DialogTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <!-- App Theme -->
    <style name="AppTheme" parent="BaseTheme.Light">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawable">@drawable/state_list_selectable_rect_black</item>
        <item name="selectableRectDrawableInverse">@drawable/state_list_selectable_rect_white</item>
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_black</item>
        <item name="selectableRoundedRectDrawable">@drawable/state_list_selectable_rounded_rect_black</item>
        <item name="selectableRoundedRectDrawableInverse">@drawable/state_list_selectable_rounded_rect_white</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/state_list_selectable_rounded_rect_black</item>
    </style>


    <!-- App Theme Variants TODO -->

    <!-- Orange App Theme -->
    <style name="BaseTheme.Orange" parent="AppTheme">
        <item name="colorPrimary">@color/material_orange_500</item>
        <item name="colorPrimaryDark">@color/material_orange_700</item>
        <item name="colorAccent">@color/material_orange_a200</item>

        <item name="dialogTheme">@style/DialogTheme.Orange</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme.Orange</item>

        <!-- TODO
        <item name="colorButtonNormal">@color/material_orange_500</item>
        <item name="colorControlNormal">@color/material_orange_500</item>
        <item name="colorSwitchThumbNormal">@color/material_green_500</item>
        <item name="colorControlActivated">@color/material_green_500</item>
        <item name="colorControlHighlight">@color/material_green_700</item>
        -->
    </style>

    <style name="AppTheme.Orange" parent="BaseTheme.Orange">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_orange</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/state_list_selectable_rounded_rect_orange</item>
    </style>

    <!-- Green App Theme -->
    <style name="BaseTheme.Green" parent="AppTheme">
        <item name="colorPrimary">@color/material_green_500</item>
        <item name="colorPrimaryDark">@color/material_green_700</item>
        <item name="colorAccent">@color/material_green_a200</item>
    </style>

    <style name="AppTheme.Green" parent="BaseTheme.Green">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_green</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/state_list_selectable_rounded_rect_green</item>
    </style>

    <!-- Blue App Theme -->
    <style name="BaseTheme.Blue" parent="AppTheme">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_blue_a200</item>
    </style>

    <style name="AppTheme.Blue" parent="BaseTheme.Blue">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_blue</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/state_list_selectable_rounded_rect_blue</item>
    </style>


    <!-- App Bar Overlay Themes -->
    <style name="AppBarOverlayTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <!-- Popup Overlay Themes -->
    <style name="PopupOverlayTheme" parent="ThemeOverlay.AppCompat.Light"/>


    <!-- Dialog Themes -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
    </style>

    <style name="DialogTheme.Orange">
        <item name="colorPrimary">@color/material_orange_500</item>
        <item name="colorPrimaryDark">@color/material_orange_700</item>
        <item name="colorAccent">@color/material_orange_a200</item>
    </style>

    <style name="DialogTheme.Green">
        <item name="colorPrimary">@color/material_green_500</item>
        <item name="colorPrimaryDark">@color/material_green_700</item>
        <item name="colorAccent">@color/material_green_a200</item>
    </style>

    <style name="DialogTheme.Blue">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_blue_a200</item>
    </style>


    <!-- AlertDialog Themes -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="AlertDialogTheme.Orange">
        <item name="colorPrimary">@color/material_orange_500</item>
        <item name="colorPrimaryDark">@color/material_orange_700</item>
        <item name="colorAccent">@color/material_orange_a200</item>
    </style>

    <style name="AlertDialogTheme.Green">
        <item name="colorPrimary">@color/material_green_500</item>
        <item name="colorPrimaryDark">@color/material_green_700</item>
        <item name="colorAccent">@color/material_green_a200</item>
    </style>

    <style name="AlertDialogTheme.Blue">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_blue_a200</item>
    </style>


    <!-- Button Styles -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
    </style>

    <style name="ButtonStyle.NoRaise">
        <!-- Pre API 21 has no raise effect by default -->
    </style>

    <style name="ButtonStyle.Colored" parent="Widget.AppCompat.Button.Colored">
    </style>

    <style name="ButtonStyle.Colored.NoRaise">
        <!-- Pre API 21 has no raise effect by default -->
    </style>

    <style name="ButtonStyle.Borderless" parent="Widget.AppCompat.Button.Borderless">
    </style>

    <style name="ButtonStyle.Borderless.ColoredText" parent="Widget.AppCompat.Button.Borderless.Colored">
    </style>

    <!-- Selectable Item Styles -->
    <style name="SelectableItemStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SelectableItemStyle.Rect">
        <item name="android:background">?selectableRectDrawable</item>
    </style>

    <style name="SelectableItemStyle.Rect.Colored">
        <item name="android:background">?selectableRectDrawableColored</item>
    </style>

    <style name="SelectableItemStyle.Rect.Inverse">
        <item name="android:background">?selectableRectDrawableInverse</item>
    </style>

    <style name="SelectableItemStyle.RoundedRect">
        <item name="android:background">?selectableRoundedRectDrawable</item>
    </style>

    <style name="SelectableItemStyle.RoundedRect.Colored">
        <item name="android:background">?selectableRoundedRectDrawableColored</item>
    </style>

    <style name="SelectableItemStyle.RoundedRect.Inverse">
        <item name="android:background">?selectableRoundedRectDrawableInverse</item>
    </style>

    <!-- Text Styles -->
    <style name="TextStyle" parent="TextAppearance.AppCompat">
    </style>

    <style name="TextStyle.Title" parent="TextAppearance.AppCompat.Title">
    </style>

    <style name="TextStyle.Body1" parent="TextAppearance.AppCompat.Body1">
    </style>

    <style name="TextStyle.Body2" parent="TextAppearance.AppCompat.Body2">
    </style>

    <!-- Spinner Styles -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
    </style>

    <style name="SpinnerStyle.Underlined" parent="Widget.AppCompat.Spinner.Underlined">
    </style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
    </style>

    <!-- Image Styles -->
    <style name="ImageStyle">
    </style>

    <style name="ImageStyle.Colored">
        <item name="android:tint">?colorAccent</item>
    </style>

    <style name="ProgressBarStyle.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
    </style>

    <!-- Card Styles -->
    <style name="CardStyle" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="CardStyle.Home">
        <item name="contentPaddingBottom">@dimen/content_vertical_spacing</item>
        <item name="contentPaddingLeft">@dimen/content_horizontal_spacing</item>
        <item name="contentPaddingRight">@dimen/content_horizontal_spacing</item>
        <item name="contentPaddingTop">@dimen/content_vertical_spacing</item>
        <item name="android:layout_marginBottom">@dimen/material_element_spacing_small</item>
        <item name="android:layout_marginLeft">@dimen/screen_horizontal_spacing</item>
        <item name="android:layout_marginRight">@dimen/screen_horizontal_spacing</item>
        <item name="android:layout_marginTop">@dimen/material_element_spacing_small</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
